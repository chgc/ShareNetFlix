{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@models/*": ["libs/models/*"],
      "@libs/*": ["libs/*"],
      "@app/*": ["projects/extension/src/app/*"],
      "@sites/*": ["projects/site/src/app/*"]
    }
  }
}
